<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CommentaryVotesPredictor.MainPage"
			 xmlns:viewModels="clr-namespace:CommentaryVotesPredictor.ViewModels">

	<ScrollView>
		<VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">


			<Label
                Text="Likeness predictor"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />
			<Entry Placeholder="Enter your commentary here"/>
			<Button Text="Predict"
					HorizontalOptions="Center"
					/>
			<HorizontalStackLayout HorizontalOptions="Center">

				<VerticalStackLayout  Margin="5">
					<Label Text="Likes possibilities in %"/>
					<Entry HorizontalOptions="Center" MinimumWidthRequest="170" IsReadOnly="True"/>
				</VerticalStackLayout>

				<VerticalStackLayout  Margin="5">
					<Label Text="Dislikes possibilities in %"/>
					<Entry HorizontalOptions="Center" MinimumWidthRequest="170" IsReadOnly="True"/>
				</VerticalStackLayout>

			</HorizontalStackLayout>
		</VerticalStackLayout>
	</ScrollView>

</ContentPage>
